pipeline {
    agent {
        label 'ansible'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Bend repository') {
            steps {
                dir('vector-role') {
                git branch: ${BRANCH_NAME}, url: 'git@github.com:Alexandr-Vedernikov/vector-role.git'
                }
            }
        }
        stage('Run molecule test') {
            steps {
                dir('vector-role') {
                sh 'molecule test'
                }
            }
        }
    }
}
